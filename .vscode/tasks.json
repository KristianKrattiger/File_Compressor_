{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",     
                "-Iinclude",
                "src/main.cpp",
                "src/compressor.cpp",
                "src/huffman.cpp",
                "src/fileHandles.cpp",
                "-o",
                "${workspaceFolder}/file_compressor"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by ChatGPT."
        }
    ]
}